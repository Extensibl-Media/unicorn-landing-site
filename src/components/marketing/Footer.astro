---
import { Image } from "astro:assets";
import logoWhite from "../../assets/images/logo-white.svg";
import apple from "../../assets/images/app.png";
import google from "../../assets/images/play.png";
---

<footer class="bg-pink-500 text-white pt-12 pb-6">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
            <!-- Logo and Description -->
            <div class="space-y-4">
                <div class="mb-4 flex items-center">
                    <Image
                        src={logoWhite}
                        alt="UnicornLanding Logo"
                        width={180}
                        height={50}
                        class="h-16 w-auto"
                    />

                    <span class="text-white text-2xl font-semibold leading-none"
                        >Unicorn Landing</span
                    >
                </div>
                <p class="text-white/90 text-sm max-w-xs">
                    Connecting individuals and couples in a safe, respectful
                    environment. Your journey to meaningful connections starts
                    here.
                </p>
                <div class="my-6">
                    <a
                        href="https://apps.apple.com/us/app/unicorn-landing/id1623833827"
                        ><img
                            src={apple.src}
                            class="h-8 inline-block m-1"
                            alt="app store link"
                        /></a
                    >
                    <a
                        href="https://play.google.com/store/apps/details?id=net.unicornlanding.app&pli=1"
                        ><img
                            src={google.src}
                            class="h-8 inline-block m-1"
                            alt="play store link"
                        /></a
                    >
                </div>
                <div class="pt-4">
                    <p class="text-white/90 text-sm">
                        &copy; {new Date().getFullYear()} UnicornLanding
                    </p>
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h3 class="font-semibold text-lg mb-4 tracking-wide">
                    Quick Links
                </h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Home</a
                        >
                    </li>
                    <!-- <li>
                        <a
                            href="/explore"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Explore</a
                        >
                    </li> -->
                    <!-- <li>
                        <a
                            href="/events"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Events</a
                        >
                    </li> -->
                    <!-- <li>
                        <a
                            href="/clubs"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Clubs</a
                        >
                    </li> -->
                    <!-- <li>
                        <a
                            href="/about"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >About Us</a
                        >
                    </li> -->
                    <li>
                        <a
                            href="/contact-us"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Contact Us</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Support -->
            <div>
                <h3 class="font-semibold text-lg mb-4 tracking-wide">
                    Support
                </h3>
                <ul class="space-y-2">
                    <!-- <li>
                        <a
                            href="/help"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Help Center</a
                        >
                    </li> -->
                    <!-- <li>
                        <a
                            href="/safety"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Safety Tips</a
                        >
                    </li> -->
                    <li>
                        <a
                            href="/terms-and-conditions"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Terms of Service</a
                        >
                    </li>
                    <li>
                        <a
                            href="/privacy-policy"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Privacy Policy</a
                        >
                    </li>
                    <li>
                        <a
                            href="/auth/forgot-password"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >Forgot Password</a
                        >
                    </li>
                    <!-- <li>
                        <a
                            href="/faq"
                            class="text-white/90 hover:text-white transition-colors duration-200"
                            >FAQ</a
                        >
                    </li> -->
                </ul>
            </div>

            <!-- Follow/Newsletter -->
            <div>
                <h3 class="font-semibold text-lg mb-4 tracking-wide">
                    Stay Connected
                </h3>
                <div class="mb-6">
                    <p class="text-white/90 text-sm mb-3">
                        Follow us on social media
                    </p>
                    <div class="flex space-x-4">
                        <a
                            href="https://twitter.com/unicornlanding"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-white hover:text-pink-200"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
                                ></path></svg
                            >
                        </a>
                        <a
                            href="https://instagram.com/unicornlanding"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-white hover:text-pink-200"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><rect
                                    width="20"
                                    height="20"
                                    x="2"
                                    y="2"
                                    rx="5"
                                    ry="5"></rect><path
                                    d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                                ></path><line
                                    x1="17.5"
                                    x2="17.51"
                                    y1="6.5"
                                    y2="6.5"></line></svg
                            >
                        </a>
                        <a
                            href="https://facebook.com/unicornlanding"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-white hover:text-pink-200"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                                ></path></svg
                            >
                        </a>
                        <a
                            href="https://tiktok.com/@unicornlanding"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-white hover:text-pink-200"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path d="M9 12a4 4 0 1 0 0 8 4 4 0 0 0 0-8z"
                                ></path><path d="M16 8v5a4 4 0 0 1-4 4"
                                ></path><path d="M22 2 16 8"></path><path
                                    d="M12 16.5V8"></path><path d="M20 4v4h-4"
                                ></path></svg
                            >
                        </a>
                    </div>
                </div>

                <div>
                    <p class="text-white/90 text-sm mb-3">
                        Subscribe to our newsletter
                    </p>
                    <form class="flex max-w-md">
                        <input
                            type="email"
                            placeholder="Your email"
                            class="flex-grow min-w-0 px-3 py-2 text-gray-900 bg-white border-0 rounded-l-md focus:outline-none focus:ring-2 focus:ring-pink-300 text-sm"
                            required
                        />
                        <button
                            type="submit"
                            class="px-4 py-2 bg-pink-600 hover:bg-pink-700 rounded-r-md transition-colors duration-200 text-sm font-medium"
                        >
                            Subscribe
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Attribution Line -->
        <div
            class="pt-8 mt-8 border-t border-pink-400/30 text-center text-white/70 text-sm"
        >
            <p>
                Designed and developed by <a
                    href="https://www.extensiblmedia.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:text-white">Extensibl Media</a
                >
            </p>
        </div>
    </div>
</footer>
