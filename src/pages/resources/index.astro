---
// src/pages/resources.astro
import Layout from "@/layouts/Layout.astro";
import ResourcesPage from "@/components/marketing/ResourcesPage.jsx";
import DownloadCTA from "@/components/marketing/DownloadCTA.astro";
import { createClient } from "@/lib/supabase/server";

const supabase = createClient({
    headers: Astro.request.headers,
    cookies: Astro.cookies,
});

const { data: articles, error: postsError } = await supabase
    .from("posts")
    .select(
        `
      *,
      tags (
      *
      )
      `,
    )
    .eq("status", "published")
    .order("created_at", { ascending: false });

console.log({ articles });

// You can fetch your content from your CMS or API here
// Example:
// const podcasts = await fetch('https://your-api.com/podcasts').then(res => res.json());
---

<Layout title="Resources | Unicorn Landing">
    <ResourcesPage client:load articles={articles} />
    <DownloadCTA />
</Layout>
