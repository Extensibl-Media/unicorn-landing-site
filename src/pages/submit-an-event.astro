---
// src/pages/contact.astro
import MainLayout from "@/layouts/Layout.astro";
import { SubmitEventForm } from "@/components/marketing/SubmitEventForm";
import FAQShort from "@/components/marketing/FAQShort.astro";
---

<MainLayout>
  <div class="container mx-auto px-4 py-24 max-w-6xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold tracking-tight mb-4">Submit Your Event!</h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Have an upcoming event that you would like us to promote? Fill out the
        form below to submit your event, and once approved, we will add it to
        our app!
      </p>
    </div>

    <div class="gap-12">
      <!-- Contact Form -->
      <div class="max-w-xl mx-auto">
        <div class="border rounded-lg p-6">
          <h2 class="text-2xl font-semibold mb-6">Send Us a Message</h2>
          <SubmitEventForm client:load />
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
  </div>
  <FAQShort />
</MainLayout>
